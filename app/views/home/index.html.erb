<h1>Elements <%= current_user.email %> </h1>
<% if @products.any? %>

<ul class='list-group'>
    <% @products.each do |product| %>
      <li class='list-group-item'>
         <div class="row">
           <div class="col s3"><%= product.name %></div>
           <div class="s3 offset-s6"><%= link_to 'Delete',
                      delete_from_cart_path(product),
                      class: 'btn btn-danger',
                      data: { confirm: 'Really Delete?'},
                      method: :delete
         %></div>
      </li>
    <% end %>
  </ul>

  <div class="row">
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">Card Title</span>
              <p>I am a very simple card. I am good at containing small bits of information.
              I am convenient because I require little markup to use effectively.</p>
            </div>
            <div class="card-action">
              <a href="#">This is a link</a>
              <a href="#">This is a link</a>
            </div>
          </div>
        </div>
      </div>
            


  <h3> total: <%= number_to_currency current_user.cart.cart_total %> </h3>


<% else %>
<h3>No Products, Go Choose One!</h3>
<% end %>
<%= link_to 'Choose new product', products_path, class: 'btn' %>
