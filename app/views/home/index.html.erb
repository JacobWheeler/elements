<h2><%= current_user.email %> </h2>
<hr />

<% if @products.any? %>

<ul class='list-group'>
  <thead><h4>Items:</h4></thead>
    <% @products.each do |product| %>
      <li class='list-group-item'>
         <div class="row">
           <div class="col s3"><%= product.name %></div>
           <div class="s3 offset-s6"><%= link_to 'Delete',
                      delete_from_cart_path(product),
                      class: 'btn btn-danger',
                      data: { confirm: 'Really Delete?'},
                      method: :delete
           %></div>
         </li>
    <% end %>
</ul>

<hr />
<h4> total: <%= number_to_currency current_user.cart.cart_total %> </h4>

<% else %>
<h3>No Products, Go Choose One!</h3>
<% end %>
<%= link_to 'Choose new product', products_path, class: 'btn' %>
